<div class="container">
  <h1 class='text-center'><%= @restaurant.name %></h1>
  <h3 class='text-center'><%= @restaurant.address %></h3>
  <h3 class='text-center'><%= @restaurant.phone_number %></h3>
  <h3 class='text-center'><%= @restaurant.category %></h3>
  <h3 class='text-center mt-3'>Reviews</h3>
  <ul class="list-group">
    <% @restaurant.reviews.each do |review| %>
      <li class="list-group-item mb-1 pb-1">Rating: <%= review.rating %>
        <p><%= review.content %></p>
      </li>
    <% end %>
  </ul>
  <p class='text-center mt-3'><%= link_to 'Back to list', restaurants_path, class: "btn btn-primary" %></p>
</div>

<div class="container">
  <h1>Add a new review</h1>
  <%= simple_form_for [@restaurant, @review] do |f| %>
  <%= f.input :rating, placeholder: '0, 1 ,2 ,3 ,4 or 5' %>
  <%= f.input :content %>
  <%= f.submit "Submit review", class: "btn btn-primary" %>
<% end %>
</div>
