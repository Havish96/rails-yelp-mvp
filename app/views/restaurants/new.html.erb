<div class="container">
  <h1 class='text-center mb-3'>Add a new Restaurant</h1>
  <%= simple_form_for(@restaurant) do |f| %>
  <%= f.input :name %>
  <%= f.input :address %>
  <%= f.input :phone_number %>
  <%= f.input :category %>
  <%= f.button :submit, class: 'btn btn-success' %>
  <%= link_to 'Back to list', restaurants_path, class: 'btn btn-primary' %></
<% end %>
</div>
