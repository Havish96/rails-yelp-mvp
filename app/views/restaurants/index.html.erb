
<div class='container'>
  <h1 class='text-center'>All Restaurants</h1>
  <h3 class='text-center'><p><%= link_to 'Add a new restaurant', new_restaurant_path, class: "btn btn-primary" %></p></h3>
  <% @restaurants.each do |resto| %>
  <li style='list-style-type: none' class='mt-3'>
    <div class="card-product">
      <img src="https://images.unsplash.com/photo-1546069901-ba9599a7e63c?ixlib=rb-4.0.3&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=1160&q=80" />
      <div class="card-product-infos">
        <h2><%= link_to resto.name, restaurant_path(resto) %> | <%= resto.category %></h2>
        <p><%= resto.address %></p>
        <p><strong>Phone: <%= resto.phone_number %></strong></p>
        <% end %>
      </div>
    </div>
  </li>
</div>
